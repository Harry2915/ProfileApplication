<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/back"
android:gravity="center"
android:orientation="vertical"
android:padding="10dp"
tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ABF6F0F0"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="40dp">

        <ImageView
            android:id="@+id/im"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/my_icon1" />
    </androidx.cardview.widget.CardView>



    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:shadowColor="@color/colorPrimaryDark"
    android:text="Sign Up"
android:layout_marginBottom="10dp"
    android:textAllCaps="true"
    android:textColor="@android:color/black"
    android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ABF6F0F0"
        app:cardCornerRadius="20dp"
        app:cardElevation="40dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Enter First Name"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edFisrtPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Enter First Name"
                    android:inputType="textPersonName" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Enter Last Name"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edLastTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Enter Last Name"
                    android:inputType="textPersonName" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Enter Your Location"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edLocationPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Enter Your Location"
                    android:inputType="textPersonName" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Enter Your Email ID"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edEmailIDPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Enter Your Email ID"
                    android:inputType="textEmailAddress" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Enter Your Phone No"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:maxLength="10"
                    android:hint="Enter Your Phone No"
                    android:inputType="phone" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <EditText
                    android:id="@+id/edPassword"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Password"
                    android:layout_weight="5"
                    android:drawableStart="@drawable/pass_lock"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/edConfPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Confirm Password"
                    android:drawableEnd="@drawable/pass_lock"
                    android:inputType="textPassword" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>







    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#D7F8F4F4"
        app:cardElevation="40dp"
        >
        <Button
            android:id="@+id/signupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="registeruser"
            android:gravity="center"
            android:drawableEnd="@drawable/reg_button"
            android:background="@drawable/btnback"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Register" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvlgn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="Already Registered?\nLogin here"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>


</LinearLayout>